{
  "json.enable": true,
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "graphql", "html", "yaml", "json", "python", "sh"],
  "languageserver": {
    "lua": {
      "command": "lua-lsp",
      "filetypes": [
        "lua"
      ]
    },
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    }
    /* "graphql": { */
    /*   "command": "graphql-lsp", */
    /*   "args": [ */
    /*     "server", */
    /*     "-m", */
    /*     "stream" */
    /*   ], */
    /*   // customize filetypes to your needs */
    /*   "filetypes": [ */
    /*     "typescript", */
    /*     "typescriptreact", */
    /*     "graphql" */
    /*   ] */
    /* } */
  },
  "coc.preferences.extensionUpdateCheck": "weekly"
}
